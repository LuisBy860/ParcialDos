@model List<ParcialDos.Models.Erollements>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UnionDeTablas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div>
        <table border="1" class="table table-dark table-borderless" id="tabladeunion">
            <thead>

                @*<th>
                        ID Enrollent

                    </th>

                    <th>
                        ID Student

                    </th>
                    <th>
                        ID Course

                    </th>*@
            <th>
                Last Name

            </th>
            <th>
                First Midname

            </th>
            <th>
                Coursus a los pertenecen los estudiantes

            </th>


            </thead>

            <tbody>

                @foreach (var iteracion in Model)
                {


                    <tr>

                        @*<td> @iteracion.ErollementID</td>
                            <td> @iteracion.StudentID</td>
                            <td> @iteracion.CourseID</td>*@
                        <td> @iteracion.Students.LastName</td>
                        <td> @iteracion.Students.FirstMidName</td>
                        <td> @iteracion.Courses.Title</td>

                    </tr>
                }




        </table>


        <h1>union de tablas</h1>
        @section scripts{
            <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
            <script>
                $(document).ready(function () {
                    var tablaCurso = $('#tabladeunion').DataTable();
                });
            </script>
        }
    </div>

</body>
</html>
